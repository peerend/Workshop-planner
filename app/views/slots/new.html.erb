<h3>Current Time Slots</h3>
<div class = "rows">
  <div class="col-md-10">
    <% @slots.each do |slot| %>
      <p><%=link_to "Remove Time Slot", slot_path(slot), data: {method: "delete"}, :class => "btn btn-xs btn-danger" %>
      <%=link_to slot.time, edit_slot_path(slot) %></p>
      
    <% end %>
  <h3> New Time Slot </h3>
  <%= render 'form' %>
  <p><a href = "/"> Home </a></p>
  </div>
</div>